<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.MainActivity"
    android:id="@+id/drawerlayadmin"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button android:layout_height="60dp"
        android:layout_width="220dp"
        android:text="View  Top Books"
        android:layout_marginStart="100dp"
        android:layout_marginTop="70dp"
        android:id="@+id/viewbtopbooks"
        />

    <Button android:layout_height="60dp"
        android:layout_width="220dp"
        android:text="Add books"
        android:layout_marginStart="100dp"
        android:layout_marginTop="160dp"
        android:id="@+id/AddBooks"
        />

    <Button android:layout_height="60dp"
        android:layout_width="220dp"
        android:text="Update or delete books"
        android:layout_marginStart="100dp"
        android:layout_marginTop="250dp"
        android:id="@+id/Update_deletebooks"
        />

</RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/draweradmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/drawer_menuadmin"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>