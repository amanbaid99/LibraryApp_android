<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.Profile"
    android:id="@+id/drawerlay"
    android:layout_margin="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Hello Mohiyyudin shaikh"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:textStyle="italic"
        android:textColor="#5C3FDD"
        android:id="@+id/greetings"
        >
    </TextView>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/profileimage"
            android:layout_marginTop="65dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/admin"
            >

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Books Read"
            android:textSize="22dp"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:id="@+id/books_read_count"
            android:textColor="#1DBA23"
            android:layout_marginStart="180dp"
            >
        </TextView>

            <TextView
                android:id="@+id/books_reading_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:layout_marginStart="180dp"
                android:text="No Books Being Read"
                android:textColor="#D3C01D"
                android:textSize="22dp"
                android:textStyle="bold"></TextView>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Books To Read"
            android:textSize="22dp"
            android:layout_marginTop="150dp"
            android:textStyle="bold"
            android:id="@+id/books_toread_count"
            android:textColor="#0D4B7C"
                android:layout_marginStart="180dp"
            >
        </TextView>


        <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/books_read_displayer"
        android:layout_marginTop="240dp"
        android:padding="6dp"
        >

    </androidx.recyclerview.widget.RecyclerView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:textSize="18dp"
        android:layout_marginTop="680dp"

        android:layout_centerHorizontal="true"
        android:id="@+id/delete_account"
        android:textColor="#0A0A0B"
        >
    </TextView>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start"/>



</androidx.drawerlayout.widget.DrawerLayout>